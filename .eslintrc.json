{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": ["react"],
    "rules": {
        "@typescript-eslint/class-name-casing": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
